<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="activities.LoginNarrowActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:singleLine="true"
        android:id="@+id/fragment_login_userName"
        android:layout_marginBottom="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/fragment_login_userName"
        android:id="@+id/fragment_login_password"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_below="@id/fragment_login_password"
        android:background="@color/primary_color_darker"
        android:textColor="@color/primary_color_white"
        android:id="@+id/fragment_login_loginButton"
        />



</RelativeLayout>